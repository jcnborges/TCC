
#include "fuzzfier.h"
#include <iostream.h>

class fuzzy_obstacle
{
 private:
	float center_x;
	float center_y;
   	short int conic;
	trapezoid_category x_axe;
	trapezoid_category y_axe;

 public:
	fuzzy_obstacle();
	fuzzy_obstacle(float xmin, float ymin, float xmax, float ymax);
	~fuzzy_obstacle();
	set_x_category(float xmin,float xcenter,float xmax);
	set_y_category(float ymin,float ycenter,float ymax);
	set_x_category(float xmin,float xcenterlow, float xcenterhigh, float xmax);
	set_y_category(float ymin,float ycenterlow, float ycenterhigh, float ymax);
	set_category(float x,float y, int distance);

	float getshare(float x, float y);
   	fuzzy_obstacle(const fuzzy_obstacle &fo);
   	fuzzy_obstacle &operator=(const fuzzy_obstacle &fo);
   	int operator==(const fuzzy_obstacle &fo);
   	int operator!=(const fuzzy_obstacle &fo);
   	friend ostream& operator<<(ostream& fluxo, fuzzy_obstacle fo);

};
